<h1>Books</h1>
<% @lists.each do |book| %>
 <p>title</p>
<span><%= book.title %></span>
<p>body</p>
<span><%= book.body %></span>
<%= link_to "Show", home_path(book.id) %>

<% end %>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<h1>New book</h1>
<%= form_with model: @list, url:'/homes',local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Books' %>
<% end %>